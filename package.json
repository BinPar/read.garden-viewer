{
  "name": "read.garden-viewer",
  "version": "0.42.0",
  "description": "Universal EBook Reader for EPUB2, EPUB3, HTML5 and PDF contents",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run build-dev\" \"npm run server-dev\"",
    "build": "tsc;webpack --config webpack.config.prod.js",
    "build-dev": "nodemon --config nodemon.json --exec 'tsc;webpack --config webpack.config.js'",
    "generate-contents": "rm -rf ./web/books;ts-node-dev ./src/server/scripts/generateContents.ts",
    "lint": "eslint --config ./.eslintrc ./src --ext .js,.jsx,.ts,.tsx",
    "publish-web": "rm -rf ./dist;tsc -p tsconfig.web.json;rm -r ../read.garden/web/sdk/read.garden-viewer;mkdir ../read.garden/web/sdk/read.garden-viewer;cp -R ./dist/* ../read.garden/web/sdk/read.garden-viewer;cp ./web/css/read.garden-viewer.css ../read.garden/web/public/css/",
    "publish-t3": "rm -rf ./dist;tsc -p tsconfig.web.json;rm -r ../read.garden-t3/src/viewer;mkdir ../read.garden-t3/src/viewer;cp -R ./dist/* ../read.garden-t3/src/viewer;cp ./web/css/read.garden-viewer.css ../read.garden-t3/src/styles/",
    "publish-app": "rm -rf ./dist;tsc -p tsconfig.app.json;webpack --config webpack.config.app.js;cp ./web/css/read.garden-viewer.css ../read.garden-mobile/sdk-viewer/css/;cp -R ./web/img ../read.garden-mobile/sdk-viewer/",
    "publish-app-t3": "rm -rf ./dist;tsc -p tsconfig.app.json;webpack --config webpack.config.app-t3.js;cat ./web/css/read.garden-viewer.css ./web/css/read.garden-viewer-icons.css > ../read.garden-mobile-t3/sdk-viewer/css/read.garden-viewer.css;cp -R ./web/img ../read.garden-mobile-t3/sdk-viewer/",
    "server-dev": "NODE_ENV=development ts-node-dev --debug --respawn ./src/server/index.ts",
    "start": "node ./dist/server/index.js",
    "test": "jest --runInBand",
    "test-firefox": "PUPPETEER_EXECUTABLE_PATH=/usr/bin/firefox FIREFOX=true jest --runInBand",
    "test-ui": "HEADLESS=false jest --runInBand",
    "test-dev": "NODE_ENV=development npx jest --watchAll --runInBand",
    "use-dev-settings": "cp ./src/config/settings/settings.dev.json ./src/config/settings/settings.json",
    "use-prod-settings": "cp ./src/config/settings/settings.prod.json ./src/config/settings/settings.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acttoreact/read.garden-viewer.git"
  },
  "author": "Ignacio Ferro Pic√≥n",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/acttoreact/read.garden-viewer/issues"
  },
  "homepage": "https://github.com/acttoreact/read.garden-viewer#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@types/browser-sync": "^2.26.3",
    "@types/css-font-loading-module": "0.0.7",
    "@types/expect-puppeteer": "^4.4.7",
    "@types/jest": "^27.4.1",
    "@types/jest-environment-puppeteer": "^5.0.0",
    "@types/mkdirp": "^1.0.2",
    "@types/puppeteer": "^5.4.5",
    "@types/serve-handler": "^6.1.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "babel-loader": "^8.2.3",
    "browser-sync": "^2.27.10",
    "chalk": "^5.0.1",
    "concurrently": "^7.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.5.1",
    "jest-environment-node": "^27.5.1",
    "jest-environment-puppeteer": "^6.0.3",
    "jest-puppeteer": "^6.1.0",
    "mkdirp": "^1.0.4",
    "node-fetch": "^3.2.2",
    "nodemon": "^2.0.15",
    "puppeteer": "^13.5.0",
    "rimraf": "^3.0.2",
    "source-map-loader": "^3.0.1",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^2",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@a2r/fs": "^1.5.1",
    "js-base64": "^3.7.2"
  }
}
