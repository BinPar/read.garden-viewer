{
  "name": "read.garden-viewer",
  "version": "0.1.0",
  "description": "Universal EBook Reader for EPUB2, EPUB3, HTML5 and PDF contents",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run build-dev\" \"npm run server-dev\"",
    "build": "tsc;webpack --config webpack.config.prod.js",
    "build-dev": "nodemon --config nodemon.json --exec 'tsc;webpack --config webpack.config.js'",
    "generate-contents": "rm -rf ./web/books;ts-node-dev ./src/server/scripts/generateContents.ts",
    "lint": "npx eslint --config ./.eslintrc ./src --ext .js,.jsx,.ts,.tsx",
    "server-dev": "NODE_ENV=development ts-node-dev --debug --respawn ./src/server/index.ts",
    "start": "node ./dist/server/index.js",
    "test": "jest --runInBand",
    "test-ui": "HEADLESS=false jest --runInBand",
    "test-dev": "NODE_ENV=development npx jest --watchAll --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acttoreact/read.garden-viewer.git"
  },
  "author": "Ignacio Ferro Pic√≥n",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/acttoreact/read.garden-viewer/issues"
  },
  "homepage": "https://github.com/acttoreact/read.garden-viewer#readme",
  "devDependencies": {
    "@types/expect-puppeteer": "^4.4.5",
    "@types/jest": "^26.0.23",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/live-server": "^1.2.0",
    "@types/mkdirp": "^1.0.1",
    "@types/puppeteer": "^5.4.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "chalk": "^4.1.1",
    "concurrently": "^6.0.2",
    "dotenv": "^8.2.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "jest-environment-node": "^26.6.2",
    "jest-environment-puppeteer": "^5.0.3",
    "jest-puppeteer": "^5.0.3",
    "live-server": "^1.2.1",
    "mkdirp": "^1.0.4",
    "ngrok": "^4.0.1",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.7",
    "puppeteer": "^8.0.0",
    "rimraf": "^3.0.2",
    "source-map-loader": "^2.0.1",
    "ts-jest": "^26.5.5",
    "ts-node-dev": "^1.1.6",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "@a2r/fs": "^1.5.1",
    "deepmerge": "^4.2.2",
    "js-base64": "^3.6.0",
    "loglevel": "^1.7.1",
    "typescript": "^4.2.4"
  }
}
